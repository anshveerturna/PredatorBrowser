# Predator Browser Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# REQUIRED: OpenAI API Key
# ===========================================
OPENAI_API_KEY=your-openai-api-key-here

# ===========================================
# Browser Configuration
# ===========================================

# Run browser in headless mode (no visible window)
PREDATOR_HEADLESS=true

# Enable stealth mode to avoid bot detection
PREDATOR_STEALTH=true

# Browser viewport dimensions
PREDATOR_VIEWPORT_WIDTH=1920
PREDATOR_VIEWPORT_HEIGHT=1080

# Custom user agent (optional, uses default if not set)
# PREDATOR_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# ===========================================
# LLM Configuration
# ===========================================

# Fast model for routing decisions (Level 1 & 2)
PREDATOR_ROUTER_MODEL=gpt-4o-mini

# Vision model for Set-of-Marks analysis (Level 3)
PREDATOR_VISION_MODEL=gpt-4o

# ===========================================
# Proxy Configuration (Optional)
# ===========================================

# HTTP Proxy
# PREDATOR_PROXY_SERVER=http://proxy.example.com:8080
# PREDATOR_PROXY_USERNAME=username
# PREDATOR_PROXY_PASSWORD=password

# ===========================================
# Logging Configuration
# ===========================================

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
